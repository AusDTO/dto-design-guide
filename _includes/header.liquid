{% include templates/skip-link.html %}

<header role="banner">
  <section class="page-header">
    <div class="wrapper">
      <div class="page-header__logo">
        <a href="/" class="logo">{{ site.title }}</a> <span class="badge--default">beta</span>
      </div>

      <div class="site-nav">
        {% include global_nav.liquid %}
      </div>

    </div>
  </section>

  {% comment %}
    Only show if this is the homepage
  {% endcomment %}
  {% if page.url == '/' %}
    <section class="hero">
      <div class="wrapper">
        <h1>{{ site.title }}</h1>
        <p class="tagline">{{ site.description }}</p>

        {% include feedback.liquid %}
      </div>
    </section>
  {% endif %}

</header>
